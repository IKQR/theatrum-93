@model Theatrum.Models.Admin.UserFilteringAdminModel

@{
  ViewData["Title"] = "Index";
  Layout = "_LayoutAdminPages";
}

<h1>Theatrs</h1>

<form asp-controller="UsersAdmin" asp-action="Index" method="post">
  <div class="form-group row">
    <label asp-for="FilteringSettings.UserName" class="col-sm-1 col-form-label">UserName</label>
    <div class="col-sm-3">
      <input asp-for="FilteringSettings.UserName" class="form-control" />
    </div>
    <label asp-for="FilteringSettings.Email" class="col-sm-1 col-form-label">Email</label>
    <div class="col-sm-3">
      <input asp-for="FilteringSettings.Email" class="form-control" />
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </div>
</form>


@if (Model.Users.Models.Count != 0)
{
  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Users.Models[0].Id)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Users.Models[0].Email)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Users.Models[0].UserName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Users.Models[0].RegistrationDate)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Users.Models[0].BirthdayDate)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.Users.Models)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Id)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.UserName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.BirthdayDate)
          </td>
          <td>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
