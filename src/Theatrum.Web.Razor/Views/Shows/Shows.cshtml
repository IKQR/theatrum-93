@model Theatrum.Models.Admin.ShowFilteringAdminModel

@{
    ViewData["Title"] = "Всі вистави";
    ViewData["Meta.keywords"] = new string[]
    {
    $"Квитки в театр", $"Театр Київ", $"Придбати білети на виставу", $"Teatrum"
    };
    ViewData["Meta.description"] = "Придбання квитків у всіх театрах києва на найближчі вистави.";
    Layout = "_Layout";
}

<h1>Вистави</h1>


<div class="col s3">
  <div id="imgThumbnail">
    <img class="materialboxed responsive-img" src="testPicture.jpg" alt="Here have to be thumbnail" style="vertical-align: top">

  </div>


</div>

<div class="col s9" style="padding-left: 5%">
  <div class="card grey darken-3">
    <div class="card-content white-text">
      <span class="card-title">Show Title</span>
      <div id="table" style="padding-top: 1%; padding-bottom: 2%">
        @if (Model.Shows.Models.Count != 0)
        {
          <table class="table">
            <thead>
              <tr>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].TheatrumId)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].Name)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].Description)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].StartDate)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].EndDate)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].AgeLimitation)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Shows.Models[0].PhotoId)
                </th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model.Shows.Models)
              {
                <tr>
                  <td>
                    @Html.DisplayFor(modelItem => item.TheatrumId)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Name)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Description)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.AgeLimitation)
                  </td>
                  <td>
                    @if (item.PhotoId != null)
                    {
                      <img class="image-small render-photo" href="" name=@Html.Raw(@Url.Action("AdminPhoto", "Photo", new {photoId = @item.PhotoId}))/>
                    }
                  </td>
                </tr>
              }
            </tbody>
          </table>
        }
